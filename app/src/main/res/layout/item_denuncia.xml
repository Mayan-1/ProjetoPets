<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="12dp"
    android:background="@color/yellow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/yellow">

        <TextView
            android:id="@+id/ref_tipo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/ref_tipo"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_tipo"
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="@id/ref_tipo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="90dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@color/yellow"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/ref_descricao"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ref_tipo"
            android:textSize="16sp"
            android:text="@string/ref_descricao"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_descricao"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="90dp"
            app:layout_constraintStart_toStartOf="@id/ref_descricao"
            app:layout_constraintTop_toBottomOf="@id/tv_tipo"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@color/yellow"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/ref_endereco"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ref_descricao"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/ref_endereco"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_endereco"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="78dp"
            app:layout_constraintStart_toStartOf="@id/ref_endereco"
            app:layout_constraintTop_toBottomOf="@id/tv_descricao"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@color/yellow"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>